{
  "name": "koa-seed",
  "version": "2.0.0",
  "keywords": [
    "koa",
    "node",
    "typescript"
  ],
  "description": "A starting point for Node.js koa apps with TypeScript",
  "scripts": {
    "start": "yarn watch",
    "watch": "nodemon --watch 'src/**/*' --ext ts,tsx,json --exec ts-node src/server.ts",
    "serve": "yarn build && node dist/server.js",
    "build": "yarn tslint && tsc && yarn sync:static",
    "sync:static": "ts-node sync.static.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch:ts": "tsc -w",
    "watch:serve": "nodemon --watch 'dist/**/*' --delay 300ms dist/server.js",
    "watch:html": "nodemon --watch 'src/**/*' --ext html --exec ts-node sync.static.ts",
    "serve-debug": "npm-run-all --parallel tslint watch:ts watch:html watch:serve",
    "test": "jest --forceExit --coverage --verbose"
  },
  "author": "whosesmile",
  "license": "ISC",
  "dependencies": {
    "async": "^2.6.0",
    "dotenv": "^5.0.1",
    "html-minifier": "^3.5.14",
    "joi": "^13.1.2",
    "koa": "^2.5.0",
    "koa-body": "^2.5.0",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-session": "^5.8.1",
    "moment": "^2.22.0",
    "nunjucks": "^3.1.2",
    "qiniu": "^7.1.3",
    "winston": "^2.4.1",
    "winston-daily-rotate-file": "^3.0.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.48",
    "@types/co-body": "^0.0.3",
    "@types/dotenv": "^4.0.3",
    "@types/html-minifier": "^3.5.2",
    "@types/jest": "^22.2.3",
    "@types/joi": "^13.0.7",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "@types/koa-send": "^4.1.1",
    "@types/koa-session": "^5.7.3",
    "@types/moment": "^2.13.0",
    "@types/nunjucks": "^3.0.0",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "jest": "^22.4.3",
    "jpeg-js": "^0.3.4",
    "nodemon": "^1.17.3",
    "npm-run-all": "^4.1.2",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}